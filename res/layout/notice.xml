<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7320b0b" >

    <ImageView
        android:id="@+id/iv_text"
        android:layout_width="250dip"
        android:layout_height="35dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dip"
        android:src="@drawable/notice_text" />

    <RelativeLayout
        android:layout_width="300dip"
        android:layout_height="450dip"
        android:layout_below="@id/iv_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dip"
        android:background="@drawable/begin_center" >

        <ImageView
            android:id="@+id/iv_center_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:src="@drawable/begin_center_c" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_center_c"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:text="若有微信红包,会第一时间通知您。\n请确保微信打开了通知栏消息"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tips"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:background="@drawable/begin_center_button" >

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="知道了"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

       
    </RelativeLayout>

</RelativeLayout>